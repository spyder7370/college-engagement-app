<div class="my-2">
    <nav aria-label="Campground Pagination">
        <ul class="pagination pagination-sm justify-content-center">
            <% if(currentPage - 1) { %>
            <li class="page-item">
                <a class="page-link" href="/posts/<%=type%>?page=<%= posts.page -1 %>">
                    <span area-hidden="true">&laquo;</span>
                </a>
            </li>
            <% } %>
            <% if(posts.totalPages > 1 && posts.docs.length) { %>
            <% for(let i = startPage; i <= endPage; i++) { %>
            <li class="page-item">
                <a class="page-link" href="/posts/<%=type%>?page=<%= i %>"
                    <%= i === posts.page ? 'style=color:#000;' : '' %>><%= i %></a>
            </li>
            <% } %>
            <% } %>
            <% if((currentPage + 1) <= totalPages) { %>
            <li class="page-item">
                <a class="page-link" href="/posts/<%=type%>?page=<%= posts.page + 1 %>">
                    <span area-hidden="true">&raquo;</span>
                </a>
            </li>
            <% } %>
        </ul>
    </nav>
</div>